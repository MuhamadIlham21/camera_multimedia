<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/imgGalery"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/galeri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv1"
            android:layout_below="@+id/imgGalery"
            android:layout_marginStart="50dp"
            android:text="@string/galeri_alert"
            android:textSize="15sp"
            android:layout_marginBottom="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/imgCamera"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/camera"
            android:layout_toEndOf="@+id/imgGalery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv2"
            android:layout_below="@+id/imgCamera"
            android:layout_marginStart="75dp"
            android:text="@string/kamera_alert"
            android:layout_toEndOf="@+id/tv1"
            android:textSize="15sp"
            android:layout_marginBottom="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>